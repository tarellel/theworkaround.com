<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: resource.data.title %>
  </head>
  <body class="<%= resource.data.layout %> <%= resource.data.page_class %> antialiased min-h-full font-inter font-normal leading-normal bg-white text-gray-400">
    <%= render "navbar", metadata: site.metadata, page: page %>
    <main class="<%= resource.data.layout %> px-10 sm:px-7 border-0">
      <%= yield %>
    </main>

    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
